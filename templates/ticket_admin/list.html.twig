{% extends 'comite_admin/admin.html.twig' %}





{% block content_body %}
    <a href="{{ path('admin_ticket_new') }}" class="btn btn-primary pull-right">
        Nouveau  <span class="fa fa-plus-circle"></span>
    </a>

    <h1>Tous les Articles </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>description</th>
            <th>Fin de publication</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.description|raw}}</td>
                <td>
                   {{ ticket.priceCE }}
                </td>

                <td>
                    <a href="{{ path('admin_ticket_edit', {
                        id: ticket.id
                    }) }}">
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_ticket_delete', {
                        id: ticket.id
                    }) }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

