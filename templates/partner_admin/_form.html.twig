{{ form_start(partnerForm) }}
    {{ form_row(partnerForm.name) }}
<div class="row">
    <div class="col-sm-9">{{ form_row(partnerForm.imageFile, {
            label: 'Image pour le partenaire',
            attr: {

                'placeholder':'Télécharger une image'
            }
        }) }}
        <div class="col-sm-3">
            {% if partnerForm.vars.data.pathImage|default %}
            <a href="{{ uploaded_asset(partnerForm.vars.data.imagePath) }}" target="_blank">
                <img src="{{partnerForm.vars.data.imagePath|imagine_filter('squared_thumbnail_small') }}" height="100">
            </a>
            {% endif %}
        </div>
    </div>
    </div>
    {{ form_row(partnerForm.description,{'id':'js-textarea'}) }}
    {{ form_row(partnerForm.typeReduction) }}
    {{ form_row(partnerForm.url)}}

<button type="submit" class="btn btn-primary">{{ button_text }}</button>
{{ form_end(partnerForm) }}