{% extends 'comite_admin/admin.html.twig' %}





{% block content_body %}
    <a href="{{ path('admin_partner_new') }}" class="btn btn-primary pull-right">
        Nouveau  <span class="fa fa-plus-circle"></span>
    </a>

    <h1>Tous les Partenaires </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Déscription</th>
            <th>Type de réduction</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.name}}</td>
                <td>{{ partner.description|raw}}</td>
                <td>
                   {{ partner.typeReduction }}
                </td>

                <td>
                    <a href="{{ path('admin_partner_edit', {
                        id: partner.id
                    }) }}">
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_partner_delete', {
                        id: partner.id
                    }) }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

