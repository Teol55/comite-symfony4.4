{% extends 'comite_admin/admin.html.twig' %}





{% block content_body %}
    <a href="{{ path('admin_article_new') }}" class="btn btn-primary pull-right">
        Nouveau  <span class="fa fa-plus-circle"></span>
    </a>

    <h1>Tous les Articles </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Date de Publication</th>
            <th>Publier?</th>
            <th>Fin de publication</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.publishedAt|date('d/m/Y')  }}</td>
                <td>
                    <span class="fa fa-{{ article.isPublished ? 'check' : 'times' }}"></span>
                </td>
                <td>{{ article.publishedEnd|date('d/m/Y')  }}</td>
                <td>
                    <a href="{{ path('admin_article_edit', {
                        id: article.id
                    }) }}">
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_article_delete', {
                        id: article.id
                    }) }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

