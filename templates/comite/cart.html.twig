{% extends 'base.html.twig' %}
{% block title %}{{title }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center site__title">
            <h1>{{ title|upper }}</h1>
        </div>
{% if items|length>0 %}
    <div class="row tool__table">
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Billet</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.ticket.title }}</td>
            <td>{{ item.ticket.priceCE }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.quantity * item.ticket.priceCe }}</td>
