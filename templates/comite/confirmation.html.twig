{% extends 'base.html.twig' %}
{% block title %}{{title }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center site__title">
            <h1>{{ title|upper }}</h1>
        </div>
        <div class="cart__text">
            <p> Votre réservation est validée.<br>Elle sera disponible dès la prochaine ouverture de votre CSE.<br> </p>
        </div><div class="text-right"><p>Les Membres de votre CSE</p></div>
    <div class="row tool__table">
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Billet</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>

        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.ticket.title }}</td>
            <td>{{ item.ticket.priceCE }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.quantity * item.ticket.priceCe }}€</td>

        </tr>
     {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" class="text-right">Total : </td>
        <td>{{ total }}€</td>
        <td></td>
    </tr>
    </tfoot>
</table>
    <button class="btn btn-success float-right"><a href="{{ path('app_homepage') }}">Retour à la page d'accueil</a> </button></div>





    </div>
{% endblock %}