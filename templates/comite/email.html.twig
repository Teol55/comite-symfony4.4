<!doctype html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Réservation de {{commande.user.forname }} {{commande.user.surname}} </title>

    <style type="text/css">
        body {
            background-color:#3498db;
            color:black;
        }
        table{
            border-collapse: collapse;
            font-size: 0.8rem;
            border:2px solid black;
        }
         th,td,tr{
            border:2px solid black;
             letter-spacing: 1px;
             text-align: right;
        }
</style>


{% block body_text %}

    <div class="container">
    <div class="row justify-content-center site__title">
        <h1>Réservation de {{commande.user.forname }} {{commande.user.surname}}</h1>
    </div>

    <div class="row tool__table">
    <table >
        <thead>
        <tr>
            <th>Billet</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>

        </tr>
        </thead>
        <tbody>
        {% for item in commande.ligneRequest %}
            <tr>
                <td>{{ item.ticket.title }}</td>
                <td>{{ item.ticket.priceCE }}</td>
                <td>{{ item.NbTicket }}</td>
                <td>{{ item.price}}€</td>

            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td>{{ commande.price }}€</td>
            <td></td>
        </tr>
        </tfoot>
    </table>
{% endblock %}